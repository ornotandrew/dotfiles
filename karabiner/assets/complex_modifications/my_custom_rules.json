{
  "title": "My custom rules",
  "rules": [
    {
      "description": "Remap fn to left_control, left_control acts like fn when F key is pressed",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "f1", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f1", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f2", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f2", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f3", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f3", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f4", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f4", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f5", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f5", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f6", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f6", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f7", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f7", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f8", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f8", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f9", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f9", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f10", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f10", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f11", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f11", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "f12", "modifiers": { "mandatory": ["left_control"] } },
          "to": [ { "key_code": "f12", "modifiers": ["fn"] } ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": { "optional": [ "any" ] }
          },
          "to": [ { "key_code": "left_control" } ]
        }
      ]
    },
    {
      "description": "Remap capslock to escape. Tapping both shifts sends capslock.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": [ "any" ] }
          },
          "to": [ { "key_code": "escape" } ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": { "mandatory": [ "right_shift" ], "optional": [ "caps_lock" ] }
          },
          "to": [ { "key_code": "caps_lock" } ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": { "mandatory": [ "left_shift" ], "optional": [ "caps_lock" ] }
          },
          "to": [ { "key_code": "caps_lock" } ] } ] }
  ]
}
