[ui]
username = Andrew van Rooyen <andrew@nomanini.com>
editor = nvim
merge = nvim -d

[alias]
lg = log --graph --limit 10 --template "{label('red bold', node|short)} - {label('magenta', ifeq(branch, 'default', '', '({branch}) '))}{desc} {label('green', '({date|age})')} {label('blue', author|person)}\n"

[extensions]
purge =
progress =
color =
remotefilelog = /home/andrew/code/remotefilelog/remotefilelog

[remotefilelog]
cachepath = /tmp/hgcache
cachelimit = 3 GB
