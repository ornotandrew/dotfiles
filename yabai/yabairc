# vim:filetype=zsh

# make sure everything is injected properly on startup
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# layout strategy
yabai -m config layout bsp

# padding
for area in top_padding bottom_padding left_padding right_padding window_gap; do
    yabai -m config $area 10
done


# moving the mouse over a window will select it as if it was clicked
yabai -m config focus_follows_mouse autoraise


# rules for specific apps
yabai -m rule --add app="^System Preferences$" manage=off
